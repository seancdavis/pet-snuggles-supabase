---
import type {Tables } from '../../supabase/types.ts'

interface Props {
  pet: Tables<'pets'>
}

const petImagePath = (pet: Tables<'pets'>) => {
  return `/images/${pet.image}`
}

const petPath = (pet: Tables<'pets'>) => {
  return `/pets/${pet.id}`
}

const { pet }: Props = Astro.props
---

<div>
  <a href={petPath(pet)}>
    <div>
      <img src={petImagePath(pet)} alt={pet.name} />
    </div>
    <h2>{pet.name}</h2>
  </a>
  <p>Greeting: {pet.greeting}</p>
</div>
